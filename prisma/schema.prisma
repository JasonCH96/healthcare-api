generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  ADMIN
  DOCTOR
  STAFF
  PATIENT
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  role      Role    @default(PATIENT)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

